@model IEnumerable<Product>
@{
    ViewData["Title"] = "Home Page";
}

<h2> Product List </h2>

<table class="table table-hover table-dark">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">IsApproved</th>
            <th scope="col">Process</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
        <tr>
            <td scope="row">@product.Name</td>
            <td>@product.Price</td>
            <td>

                @if (product.isApproved)
                {
                    <span class="badge badge-pill badge-success">True</span>
                }
                else
                {
                    <span class="badge badge-pill badge-danger">False</span>
                }

            </td>
            <td>
                <a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@product.Id">
                    Edit
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" asp-controller="Home" asp-action="Create">
    Create
</a>